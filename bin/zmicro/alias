#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro navidrome <args ...>"
  echo ""

  navidrome --help
}

version() {
  navidrome --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    navidrome "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
